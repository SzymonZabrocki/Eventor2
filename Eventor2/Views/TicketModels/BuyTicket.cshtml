@model Eventor2.Models.TicketNumberModels

<div class="container" style=" margin-top: 100px">
    <h1>Wybierz swój bilet!</h1>
    <div class="card-deck" style="margin: 4%">

        <div class="card">
            <div class="card-header" style="text-align:center">BILET BASIC</div>
            <div class="d-flex flex-column card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Wstęp na główną scenę</li>
                    <li class="list-group-item">Wstęp na teren targów</li>
                    <li class="list-group-item">Zaproszenie na After Party</li>
                </ul>
                <br />

                <div class="mt-auto">
                    <h3 style="text-align:center">Cena: 99 zł</h3>
                </div>
            </div>
            <div class="d-flex card-footer">

                <div class="input-group">
                    <div class="input-group-append">
                    @using (Html.BeginForm("ReserveBasicTicketForLoggedUser", "TicketModels", FormMethod.Post))
                    {
                        @Html.TextBoxFor(m => m.Count, new { @class = "form-control", placeholder="Wpisz liczbę biletów" })
                        <button class="btn btn-outline-secondary" type="submit">Rezerwuj</button>
                    }
                    </div>

                </div>


            </div>
        </div>
        <div class="card" style="  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
">
            <div class="card-header" style="text-align:center"><b>BILET PRO</b> <span class="badge badge-danger">HOT</span></div>
            <div class=" d-flex flex-column card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Benefity z biletu BASIC</b></li>
                    <li class="list-group-item">Wstęp na boczne sceny</li>
                    <li class="list-group-item">Dostęp do materiałów prasowych</li>
                    <li class="list-group-item">Zaproszenie na Networking</li>
                </ul>
                <br />

                <div class="mt-auto">
                    <h3 style="text-align:center">Cena: 229 zł</h3>
                </div>

            </div>
            <div class="d-flex card-footer">
                <div class="input-group">
                    <div class="input-group-append">
                        @using (Html.BeginForm("ReserveProTicketForLoggedUser", "TicketModels", FormMethod.Post))
                        {
                            @Html.TextBoxFor(m => m.Count, new { @class = "form-control", placeholder = "Wpisz liczbę biletów" })
                            <button class="btn btn-outline-secondary" type="submit">Rezerwuj</button>
                            
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" style="text-align:center">BILET VIP</div>
            <div class=" d-flex flex-column card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Benefity z biletu PRO</b></li>
                    <li class="list-group-item">Dostęp do bocznego wejścia</li>
                    <li class="list-group-item">Wstęp do strefy VIP</li>
                    <li class="list-group-item">Dostęp do nagrań ze wszystkich konferencji</li>
                </ul>
                <br />

                <div class="mt-auto">
                    <h3 style="text-align:center">Cena: 499 zł</h3>
                </div>

            </div>
            <div class="d-flex card-footer">
                <div class="input-group">
                    <div class="input-group-append">
                        @using (Html.BeginForm("ReserveVipTicketForLoggedUser", "TicketModels", FormMethod.Post))
                        {
                            @Html.TextBoxFor(m => m.Count, new { @class = "form-control", placeholder = "Wpisz liczbę biletów" })
                            <button class="btn btn-outline-secondary" type="submit">Rezerwuj</button>

                        }
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
